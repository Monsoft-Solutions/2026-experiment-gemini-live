# Google Cloud Project ID (required)
PROJECT_ID=your-gcp-project-id

# Region (default: us-central1)
LOCATION=us-central1

# Model
MODEL=gemini-live-2.5-flash-preview-native-audio-09-2025

# Path to service account key JSON (required if gcloud CLI not installed)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Server port
PORT=5173

# Convex URL
CONVEX_URL=https://your-deployment.convex.cloud

# OpenAI Realtime (optional — enables OpenAI provider)
OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_REALTIME_MODEL=gpt-realtime  # default

# ElevenLabs (optional — enables ElevenLabs provider)
ELEVENLABS_API_KEY=sk_your-elevenlabs-api-key
ELEVENLABS_AGENT_ID=agent_your-agent-id

# GitHub webhook auto-deploy (optional)
GITHUB_WEBHOOK_SECRET=
